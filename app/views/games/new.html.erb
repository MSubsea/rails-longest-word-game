<h1>New game</h1>
<div class="letters">
<% @letters.each do |letter|%>
<div class="letter"><%=letter%></div>
<% end %>
</div>
<form method="post" action="/score" class="myform">
<input type="hidden" name="letters" value="<%=@letters.join()%>" />
<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
<label target="solution">What's the longest word you can find?</label><br>
<input type="text"  placeholder="type your solution" name="solution"/>
<input type="submit" />
</form>
